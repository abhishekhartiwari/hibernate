<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="studentPU" transaction-type="RESOURCE_LOCAL">
        <class>com.example.Student</class>

        <properties>
            <!-- Database Connection -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/myjpa"/>
            <property name="jakarta.persistence.jdbc.user" value="abhishek"/>
            <property name="jakarta.persistence.jdbc.password" value="abhishek"/>

            <!-- Hibernate as provider -->
            <property name="jakarta.persistence.jdbc.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
